<h1>ログイン</h1>

<% if @error_message %>
    <p class="text-danger"><%= @error_message %></p>
<% end %>

<%= form_with scope: :session, class: "mx-3", local: true do |f| %>
    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email, value: @email, class: "form-control", id: "session_email" %>
    </div>
    <div>
    <div class="form-group">
      <%= f.label :password, 'パスワード' %>
      <%= f.text_field :password, value: @password, class: "form-control", id: "session_password" %>
    </div>
    <div>
      <%= f.submit 'ログインする', class: "btn btn-primary" %>
    </div>
<% end %>