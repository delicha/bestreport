<h1>生徒一覧</h1>
<% if current_user.admin %>
    <%= link_to "新規登録", new_student_path, class: "btn btn-primary my-3 mx-3" %>
<% end %>
<%= search_form_for @q, class: 'mb-5' do |f| %>
    <div class="form-group row">
        <%= f.label :kana_cont, 'カナ', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.search_field :kana_cont, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :school_cont, '学校', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.search_field :school_cont, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.submit class: 'btn btn-outline-primary' %>
    </div>
<% end %>

<div class="mb-3">
    <%= paginate @students %>
    <%= page_entries_info @students %>
</div>

<table class="table table-hover table-bordered shadow-sm my-3">
    <thead class="thead-default">
        <tr class="table-primary text-center">
            <th><%= Student.human_attribute_name(:name) %></th>
            <th><%= sort_link(@q, :kana) %></th>
            <th><%= sort_link(@q, :school) %></th>
            <th><%= Student.human_attribute_name(:grade) %></th>
            <th><%= sort_link(@q, :birthdate) %></th>
            <% if current_user.admin %>
                <th>操作</th>
            <% end %> 
        </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
        <tr>
            <td><%= link_to student.name, student %></td>
            <td><%= student.kana %></td>
            <td><%= student.school %></td>
            <td>
                <% @age = (Date.today.strftime('%Y%m%d').to_i - (Date.parse(student.birthdate.to_s)).strftime('%Y%m%d').to_i) / 10000 %>
                <% @today = Date.today.strftime('%Y%m%d').to_i %>
                <% @bday = (Date.parse(student.birthdate.to_s)).strftime('%Y%m%d').to_i %>
                <% if (@age == 17) && (@bday < @today) %>
                    高３
                <% elsif (@age == 16) && (@bday < @today) %>
                    高２
                <% elsif (@age == 15) && (@bday < @today) %>
                    高１ 
                <% elsif (@age == 14) && (@bday < @today) %>
                    中３ 
                <% elsif (@age == 13) && (@bday < @today) %>
                    中２ 
                <% elsif (@age == 12) && (@bday < @today) %>
                    中１ 
                <% elsif (@age == 11) && (@bday < @today) %>
                    小６ 
                <% elsif (@age == 10) && (@bday < @today) %>
                    小５
                <% elsif (@age == 9) && (@bday < @today) %>
                    小４
                <% elsif (@age == 8) && (@bday < @today) %>
                    小３
                <% elsif (@age == 7) && (@bday < @today) %>
                    小２
                <% elsif (@age == 6) && (@bday < @today) %>
                    小１
                <% else  %>
                    その他
                <% end %>
            </td>
            <td><%= student.birthdate %></td>
            <% if current_user.admin %>
                <td class="d-fl">
                    <%= link_to "詳細", student_path(student), class: "btn btn-primary" %>
                    <%= link_to "編集", edit_student_path(student), class: "btn btn-secondary" %>
                </td>
            <% end %> 
        </tr>
    <% end %>    
    </tbody>
</table>

<div class="mb-3">
    <%= paginate @students %>
    <%= page_entries_info @students %>
</div>

<% if current_user.admin %>
    <%= link_to "エクスポート", students_path(format: :csv), class: "btn btn-primary mb-3" %>

    <%= form_with url: import_students_path, multipart: true, class: 'mb-3' do |f| %>
        <%= f.file_field :file, :accept => "text/csv" %>
        <%= f.submit "インポート", class: 'btn btn-primary' %>
    <% end %>
<% end %>