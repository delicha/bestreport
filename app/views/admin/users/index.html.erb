<h1>講師一覧</h1>

<%= link_to "新規登録", new_admin_user_path, class: "btn btn-primary my-3 mx-3" %>

<table class="table table-hover table-bordered shadow-sm my-3">
    <thead class="thead-default">
        <tr class="table-danger">
            <th><%= User.human_attribute_name(:name) %></th>
            <th><%= User.human_attribute_name(:kana) %></th>
            <th><%= User.human_attribute_name(:email) %></th>
            <th><%= User.human_attribute_name(:subject) %></th>
            <th><%= User.human_attribute_name(:admin) %></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= link_to user.name, [:admin, user] %></td>
            <td><%= user.kana %></td>
            <td><%= user.email %></td>
            <td><%= user.subject %></td>
            <td><%= user.admin? ? 'あり' : 'なし' %></td>
            <td class="text-center">
                <%= link_to "編集", edit_admin_user_path(user), class: "btn btn-secondary mr-3" %>
                <%= link_to "削除", [:admin, user], method: :delete, data: { confirm: "講師#{user.name}先生」を削除します。よろしいですか？"}, class: "btn btn-danger" %>
            </td>
        </tr>
    <% end %>    
    </tbody>
</table>
