
<% if @error_message %>
  <p class="text-danger"><%=@error_message %></p>
<% end %>

<%=form_with scope: :session, local: true do |f| %>

<div class="form-group px-5 mx-5">
  <%=f.text_field :email, value: @email, autofocus: true, autocomplete: "email",class: "form-control my-4",id: "session_email", placeholder: "メールアドレス" %>
  <%=f.text_field :password, value: @password, autocomplete: "password", class: "form-control", id: "session_password", placeholder: "パスワード" %>
</div>
<div class="text-center mt-4">
  <%=f.submit 'ログインする', class: "btn btn-info btn-lg" %>
</div>
<% end %>

