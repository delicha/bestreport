<h1>生徒一覧</h1>
<% if current_user.admin %>
    <%= link_to "新規登録", new_student_path, class: "btn btn-primary my-3 mx-3" %>
<% end %>
<%= search_form_for @q, class: 'mb-5' do |f| %>
    <div class="form-group row">
        <%= f.label :kana_cont, 'カナ', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.search_field :kana_cont, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :school_cont, '学校', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.search_field :school_cont, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.submit class: 'btn btn-outline-primary' %>
    </div>
<% end %>

<div class="mb-3">
    <%= paginate @students %>
    <%= page_entries_info @students %>
</div>

<table class="table table-hover table-bordered shadow-sm">
    <thead class="thead-default">
        <tr class="table-primary">
            <th><%= Student.human_attribute_name(:name) %></th>
            <th><%= sort_link(@q, :kana) %></th>
            <th><%= sort_link(@q, :birthdate) %></th>
            <th><%= sort_link(@q, :school) %></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
        <tr>
            <td><%= link_to student.name, student %></td>
            <td><%= student.kana %></td>
            <td><%= student.birthdate %></td>
            <td><%= student.school %></td>
            <td class="text-center">
                <%= link_to "詳細", student_path(student), class: "btn btn-primary mr-3" %>
                <%= link_to "編集", edit_student_path(student), class: "btn btn-secondary mr-3" %>
                <%= link_to "削除", student, method: :delete, data: { confirm: "生徒#{student.name}」を削除します。よろしいですか？"}, class: "btn btn-danger" %>
            </td>
        </tr>
    <% end %>    
    </tbody>
</table>

<%= link_to "エクスポート", reports_path(format: :csv), class: "btn btn-primary mb-3" %>

<%= form_with url: import_reports_path, multipart: true, class: 'mb-3' do |f| %>
    <%= f.file_field :file, :accept => "text/csv" %>
    <%= f.submit "インポート", class: 'btn btn-primary' %>
<% end %>